<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Exchange</title>
    <link rel="stylesheet" href="~/Scripts/node_modules/bootstrap/dist/css/bootstrap.css" />
</head>
<body ng-app="app">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Exchange</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link"  href="/Home/Index">Razor view <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link"  href="/Home/AjaxView">Ajax view</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/ModifyView">Modify exchanges</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – by EvgenSav</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
    <script src="~/Scripts/node_modules/jquery/dist/jquery.js"></script>
    <script src="~/Scripts/node_modules/popper.js/dist/umd/popper.js"></script>
    <script src="~/Scripts/node_modules/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/Scripts/node_modules/moment/moment.js"></script>
    <script src="~/Scripts/node_modules/angular/angular.js"></script>
    <script src="~/Scripts/node_modules/chart.js/dist/Chart.js"></script>
    <script src="~/Scripts/myApp/angular_app.js"></script>


</body>
</html>
